    echo "üöÄ Starting development server on port 8000..."
    python3 server.py > /dev/null 2>&1 &
    sleep 2
    if lsof -ti:8000 > /dev/null 2>&1; then
        echo "‚úÖ Server running at http://localhost:8000"
    else
        echo "‚ö†Ô∏è  Server failed to start - you may need to start it manually"
    fi
else
    echo "‚úÖ Server already running on port 8000"
fi

